# Application port
# The port your server will listen on
PORT=3000

# MongoDB connection string
# Example: mongodb://localhost:27017/shipsdb
MONGODB_URI=mongodb://localhost:27017/shipsdb

# JWT secret for authentication
# Use a long, random string in production
JWT_SECRET=your_jwt_secret_here

# Node environment
# Set to 'development', 'production', or 'test'
NODE_ENV=development

# CORS allowed origin (for production)
# Example: https://example.com
CORS_ORIGIN=https://example.com
